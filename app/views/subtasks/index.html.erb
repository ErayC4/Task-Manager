<p style="color: green"><%= notice %></p>

<h1>Subtasks</h1>
<style>
  .main-container {
    margin: 0 128px;
    display: grid;
    grid-template-columns: 1fr 1fr; /* Left side nimmt 2/3, right side 1/3 */
    gap: 16px; /* Abstand zwischen den beiden Spalten */  }
  
  .dot {
    height: 8px;
    width: 8px;
    background-color: black;
    border-radius: 99px;
    margin-right: 12px;
  }
  .dot-and-time {
    display: flex;
    align-items: center;
  }
  .todo-card-container {
    border-left: solid 1px #ccc;
    margin-left: 4px;
    padding-top: 8px;
    padding-bottom: 32px;
    padding-left: 16px; 
  }
  .todo-card {
    padding: 8px 16px;
    border-radius: 8px;
    border: solid #ADA7C8 2px;
  }

  .task-name {
    font-size: 20px;
  }
  .todo-now{
    background-color: #CFCAE3;
    padding-top: 4px;
    padding-bottom: 4px;
    border-radius: 99px;
    width: 100%;
  }
  .todo-now-container{
    margin-top: 4px;
    display: flex; 
    align-items: center;
  }
  .check-box {
    width: 26px;
    height: 26px;
    border: 2px solid #ADA7C8;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box; /* Inklusive border in die Größenberechnung */
    padding: 0; /* Stellen Sie sicher, dass kein Padding vorhanden ist */
    margin-left: 12px;
}

.add-new-task-container{
  margin-top: 12px;
  display: inline-flex; 
  border: solid 2px #ADA7C8;
  border-radius: 999px;
  height: 26px;
  align-items: center; 
}
.plus-svg{
  padding-left: 12px;
}

.left-of-at{
  display: flex;
  align-items: center;
}
.left-of-at-input-field{
  border: solid 2px #ADA7C8;
  border-right: none;
  border-radius: 999px 0 0 999px;
  width: 100%;
  padding: 0 8px;
  height: 28px;
}
.input-field-buttons-border{
  border: solid 2px #ADA7C8;
  border-radius: 0px 999px 999px 0px;
  border-left: none;
}
.input-field-buttons{
  display:flex; 
  align-items: center;
  gap: 8px;
  background-color: #CFCAE3;
  height: 24px;
  border-radius: 999px;
  padding: 0 8px;
  margin-right: 2px;
  margin-top: 2px;
  margin-bottom: 2px;
}
.submit-button{
  background-color: transparent;
  border: none;
  padding-top: 5px;
}
.cancel-button {
  width: 18px;
  height: 18px;
}

.task {
  font-size: 32px;
}

.goal-container {
  display: flex;
  align-items: center;
  gap: 4px;
  border-bottom: solid 2px #ADA7C8;
  padding-bottom: 4px;
}
.goal {
  font-size: 20px;
}
.goal-reason {
  margin-top: 12px;
  font-size: 20px;
}

.subtasks-container{
  font-size: 20px;
  border-radius: 999px;
  background-color: #CFCAE3;
  margin-top: 12px;
  padding: 4px 8px;
}
</style>
<body>

<div id="subtasks">
  <div class="main-container">
    <div>
      <% @tasks.each do |task| %>
        <% if task.repeat_schedule.include?(@day_index.to_s) && task.user == current_user %>
          <div class="left-side">
            <div class="dot-and-time">
              <div class="dot"></div>
              <p><%= task.starting_time %> - <%= task.ending_time %> <%= !task.subtask_id.present? %></p>
            </div>

            <div class="todo-card-container">
              <div class="todo-card" id="todo-card" data-task-id="<%= task.id %>">
                <p class="task-name"><%= task.title %></p>
                <% if !task.subtask_id.present? %>
                            <div class="add-new-task-container">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="plus-svg" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                              </svg>
                              <p>
                                <span style="padding-left: 4px; padding-right: 12px;">
                                  <%= link_to "New subtask", new_subtask_path %>
                                </span>
                              </p>
                            </div>
                          <% end %>
                <div class="todo-now-container">
                    <div style="padding-left: 12px;">
                      <% @subtasks.each do |subtask| %>

                        <% if subtask.task_id == task.id %>
                          <%= subtask.title %>
                          <%= button_to 'Toggle Finished', toggle_finished_subtask_path(subtask), method: :patch %>
                          <% if subtask.finished %>
                            <div class="add-new-task-container">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="plus-svg" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                              </svg>
                              <p>
                                <span style="padding-left: 4px; padding-right: 12px;">
                                  <%= link_to "New subtask", new_subtask_path %>
                                </span>
                              </p>
                            </div>
                          <% end %>
                        <% end %>
                      <% end %>
            
                    </div>
                </div>

                
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div>
      <% @tasks.each do |task| %>
        <% if task.repeat_schedule.include?(@day_index.to_s) && task.user == current_user %>
          <div class="right-side" data-task="<%= task.id %>">
            <p class="task"><%= task.title %></p>
            
            <% if task.subtasks.present? %>
              <% task.subtasks.each do |subtask| %>
                <div class="subtasks-container">
                  <p style="font-size: 20px;"><%= task.starting_time %> - <%= task.ending_time %> <%= subtask.title %></p>
                </div>
                <%= form_with(model: subtask, url: subtask_path(subtask), method: :patch, local: true) do |form| %>
                  <p style="margin-top: 12px; margin-bottom: 4px;">Left of at: </p>
                  <div class="left-of-at">
                    <%= form.text_field :left_of_at, value: subtask.left_of_at, class: "left-of-at-input-field" %>
                    <div class="input-field-buttons-border">
                      <div class="input-field-buttons">
                        <button type="submit" class="submit-button">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                            <path d="M11 2H9v3h2z"/>
                            <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z"/>
                          </svg>
                        </button>
                        <svg xmlns="http://www.w3.org/2000/svg" class="cancel-button" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                <% end %>

              
              <% end %>
            <% end %>
            
          </div>
        <% end %>
        
      <% end %>
    </div>
  </div>
</div>

</body>
