  <style>
    .container {
      display: flex;
      align-items: start; /* Stellt sicher, dass die Timeline und der Restinhalt oben ausgerichtet sind */
    }

    .timeblock {
      position: absolute;
    }
    
    .timeline {
      display: flex;
      gap: 4px;
    }

    .timeline-hours-container {
      display: inline;
    }
    .timeline-hours {
      display: grid;
      grid-template-rows: repeat(24, 1fr);
      width: 48px;
      margin-top: 121px;
    }

    .timeline-item {
      width: 100%;
      text-align: center;
      height: 60px;
    }
    .small-line {
      height: 1px; 
      background-color: #DBDBDB; 
      margin-bottom: 29px;
    }
    .lines-container {
      width: 16px;
      margin-top: 130px;
    }
    .content {
      flex-grow: 1; /* Der Restinhalt nimmt den verbleibenden Platz ein */
    }

    .weekdays-navbar-container {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      border-bottom: 1px solid #DBDBDB;
    }
    .weekday-item {

      text-align: center;
      border-left: 1px solid #DBDBDB;
      padding: 16px 0px;
    }
    
    .grid-container {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      grid-template-rows: repeat(24, 1fr);
      position: relative;
    }

    .grid-item {
      border-left: 1px solid #DBDBDB;
      border-bottom: 1px solid #DBDBDB;
      padding: 29.5px;
      text-align: center;
    }

    .timeblock {
      width: calc((100% - 32px * 6) / 7);
      align: center;
      color: black; 
      margin-left: 7px;
      border-radius: 8px;
      background-color: orange;
    }

    .timeblock-grid-container {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      /*100% bildbreite - padding * 2 - 68px von timelines*/
      width: calc(100% - 256px - 68px);
      margin-left: 195px;
      margin-top: 271px;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .create-task-button{
      font-size: 18px;
      text-decoration: none; 
      padding: 8px 24px;
      border: none;
      border-radius: 888px;
      display: flex;
      align-items: center;
      gap: 4px;
      background-color: #FF6600;
      margin-bottom: 32px;

    }
    .container{
      padding: 64px 128px;
      background-color: white;
      display:flex;
      flex-direction: column;

    }
    .calender-container{
      display:flex;
      width:100%;
    }
    .date-active{ 
      font-size: 30px;
      color: white;
      background-color: #FF6600;
      padding: 6px 8px;
      border-radius: 999px;
      margin-top: 2px;
    }
    .date-not-active{ 
      font-size: 30px;
      color: black;
      padding: 6px 8px;
      border-radius: 999px;
      margin-top: 2px;
    }
    .date-container{
      width: 100%;
      display: flex;
      justify-content: center; 
    }

  </style>
</head>

<div id="tasks">
  
  <div class="container">
    <button class="create-task-button">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" class="bi bi-plus-lg" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
    </svg>
    <span><%= link_to "New Task", new_task_path, style:"text-decoration: none; color: white" %> </span>
  </button>
    <div class="calender-container">
        <div class="timeline">
          <div class="timeline-hours-container">
            <div class="timeline-hours">
          <% (0..23).each do |hour| %>
            <div class="timeline-item">
              <%= hour + @smallest_value - 24 < 10 && hour + @smallest_value - 24 > 0 ? "0" : "" %><%= hour + @smallest_value > 23 ? @smallest_value + hour - 24 : hour + @smallest_value%>:00
            </div>
          <% end %>
          </div>
          </div>
          

          <div class="lines-container">
            <% (0..47).each do |halfhour|%>
              <div class="small-line" style="width:<%= halfhour % 2 == 0 ? 100: 50 %>%; margin-left:<%= halfhour % 2 == 0 ? 0: 8 %>px"></div>
            <% end%>
          </div>
        </div>
      
    <div class="content">
      <div class="weekdays-navbar-container">
        
        <% (1..7).each do |day| %>
          <div class="weekday-item">
            <p style="color: <%= Time.now.strftime("%w").to_i == day ? "#FF6600" : "black" %>"><%= (Time.now + (day - Time.now.strftime("%w").to_i) * 24 * 60 * 60).strftime("%a") %></p>
            <div class="date-container">
                <%# if Time.now.strftime("%w").to_i == day%>
                  <%#= Time.now.strftime("%d").to_i %>
                <%# else %>
                  <%#= Time.now.strftime("%d").to_i + day - Time.now.strftime("%w").to_i%>
                <%# end %>

                <% if Time.now.strftime("%w").to_i == day%>
                  <div class="date-active"> 
                    <%= Time.now.strftime("%d").to_i %>
                  </div>
                <% elsif Time.now.strftime("%d").to_i >= 30 && Time.now.strftime("%m").to_i % 2 == 0%>
                  <div class="date-not-active"> 
                    <%= day - Time.now.strftime("%w").to_i < 0 ? Time.now.strftime("%d").to_i + day - Time.now.strftime("%w").to_i : day - Time.now.strftime("%w").to_i%>
                  </div>
                <% else %>
                  <div class="date-not-active">
                    <%= Time.now.strftime("%d").to_i + day - Time.now.strftime("%w").to_i%>
                  </div>
                <% end %>
            </div>
          </div>

        <% end %>
      </div>

      <div class="grid-container">
        <% (0..6).each do |day| %>
          <% (0..23).each do |hour| %>
            <div class="grid-item"></div>
          <% end %>
        <% end %>
      </div>

      <div class="timeblock-grid-container">
        <% (0..6).each do |day| %> <%# Iteriere über die Tage der Woche %>
          <div>
            <% @tasks.each do |task| %>
              <% if task.user == current_user %> <%# Überprüfe, ob die Aufgabe dem aktuellen Benutzer gehört %>
                <% if task.repeat_schedule && task.repeat_schedule.include?(day.to_s) %> <%# Überprüfe, ob der Tag enthalten ist %>
                  <% if calculate_height(task.starting_time, task.ending_time) < 45 %>
                    <div class="timeblock" style=" height: <%= calculate_height(task.starting_time, task.ending_time) %>px; margin-top: <%= calculate_margin_to_baseline(@smallest_value, task.starting_time) %>px">
                      <%= task.title %>
                      <%= task.starting_time %>
                    </div>
                  <% else %>
                    <div class="timeblock" style="height: <%= calculate_height(task.starting_time, task.ending_time) %>px; margin-top: <%= calculate_margin_to_baseline(@smallest_value, task.starting_time) %>px">
                        <%= task.title %>
                        <p style="margin: 0"><%= task.starting_time %> - <%= task.ending_time %></p>
                    </div>
                  <% end %>
                <% end %>
                
              <% end %> <%# Überprüfe Benutzer %>
            <% end %> <%# End of task iteration %>
          </div>
        <% end %> <%# End of day iteration %>
      </div>
    </div>
    </div>
    
  </div>
</div>

